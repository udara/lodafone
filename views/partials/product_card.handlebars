<!-- product-card -->
<div class="col-sm-6 col-md-6 col-lg-3 col-xl-3 mt-4 mb-4">
    <div class="product-card pt-2 pl-3 pr-3">
        
        {{#if fourG}}
        <h4 style="font-weight: 600;"> {{ fourG }}</h4>
        {{/if}}

        {{#unless fourG}}
        <h4 style="font-weight: 600;">3G Network</h4>
        {{/unless}}

        <div class="text-center">
            <img src="/phone_images/{{ products.0.product_image }}" class="thumb">
        </div>
        <h4 class="brand-name mt-3 mb-4">{{ brand.brand_name }}</h4>
        <h2 class="model-name"> {{ model_name }} </h2>
        <h4 class="mt-3 mb-4 price"> {{ products.0.price }} <span class="per-month">per month</span></h4>

        <div class="features">
            <h4>Features</h4>
            <ul>
                <li class="list mt-3 mb-3"><span style="font-weight: 600;">Display:</span> {{ screen }} </li>
                <li class="list mb-3"><span style="font-weight: 600;">OS:</span> {{ os }} </li>
                <li class="list mb-3"><span style="font-weight: 600;">Processor:</span> {{ processor }}</li>
            </ul>
        </div>
        <a href="single_product/{{ local_model_id }}"><button type="button" class="btn btn-block btn-outline-dark mt-4 mb-4">View product</button></a>
    </div>
</div>

