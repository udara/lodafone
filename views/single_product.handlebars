{{!-- Seperate headers to handle responsive navigation. --}}
{{> header }}
<!-- Single product card. -->
    <div class="container-xl">
        <div class="row">
            <div class="col-sm-12 mt-4 mb-4">
                <div class="product-new-placeholder pt-2 pl-3">
                </div>
                <div class="single-product-card">
                    <!-- Product image and despription with colours. -->
                    <div class="row p-5">
                        <div class="col-md-6">
                            <h4>{{model.0.model_name}}</h4>
                            <div class="text-center">
                                <img src="/phone_images/{{ model.0.products.0.product_image }}"  class="main-img">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4 class="brand-name mt-3 mb-4">{{model.0.brand.brand_name}}</h4>
                            <h2 class="model-name">{{model.0.model_name}}</h2>
                            <h4 class="mt-3 price">{{model.0.products.0.price}} <span class="per-month">per month</span></h4>
                            <h4 class="mt-3 mb-3 price">Description</h4>
                            <p>
                                {{model.0.description}}
                            </p>
                            <div class="single-product-features mt-4">
                                <h4 class="mt-4 mb-4 price">Choose your colour</h4>
                                <div class="container colour-circles d-flex flex-row mb-4">
                                    <div class="row">
                                        {{#each model.0.products}}
                                        <div>
                                            <img data-productsku="{{sku}}" src="/phone_images/{{product_image}}" style="width:80px;">
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <button type="button"
                                class="btn btn-lg btn-lg-text btn-block btn-outline-dark mt-4 mb-4 add_item" data-id="{{model.0.products.0.sku}}">Add to cart</button>
                        </div>
                    </div>
                    <!-- <div class="row p-5">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div> -->
                </div>
            </div> <!-- end of row -->
        </div>
    </div>